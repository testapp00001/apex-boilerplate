# =============================================================================
# Docker Development Environment Configuration
# =============================================================================
# Copy this to .env and customize for your local setup
# Usage: docker-compose --env-file .env.docker up -d
# =============================================================================

# Server
HOST=0.0.0.0
PORT=8080

# Database
DATABASE_URL=postgres://apex:apex_secret@postgres:5432/apex_db
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5

# JWT Authentication
JWT_SECRET=docker-dev-secret-change-in-production
JWT_EXPIRATION_HOURS=24
JWT_ISSUER=apex-api

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECS=60

# Logging
RUST_LOG=info,api_server=debug,apex_infra=debug
LOG_FORMAT=pretty

# Alerting
ALERTS_ENABLED=true
# ALERT_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# Redis (for future use)
REDIS_URL=redis://redis:6379
